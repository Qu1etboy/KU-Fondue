<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" spacing="5.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ku.cs.controllers.ShowUserDetailController">
   <children>
      <HBox>
         <children>
            <Button mnemonicParsing="false" onAction="#handleBackButton" styleClass="transparent-button" text="Back">
               <graphic>
                  <FontAwesomeIconView glyphName="ARROW_LEFT" />
               </graphic>
            </Button>
         </children>
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
      </HBox>
      <HBox prefWidth="651.0" spacing="50.0" styleClass="title">
         <children>
            <Label text="ผู้ใช้ทั้งหมด" />
         </children>
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER" prefHeight="35.0" prefWidth="651.0" spacing="10.0">
         <children>
            <VBox prefHeight="59.0" prefWidth="237.0">
               <children>
                  <Label text="บทบาท" />
                  <ComboBox fx:id="roleSelector" prefHeight="26.0" prefWidth="214.0" promptText="ทุกบทบาท" />
               </children>
            </VBox>
            <VBox prefHeight="59.0" prefWidth="237.0">
               <children>
                  <Label text="หน่วยงาน" />
                  <ComboBox fx:id="agencySelector" prefHeight="26.0" prefWidth="214.0" promptText="ทุกหน่วยงาน" />
               </children>
               <HBox.margin>
                  <Insets bottom="10.0" />
               </HBox.margin>
            </VBox>
            <Button mnemonicParsing="false" onAction="#handleClearSearchButton" prefHeight="26.0" prefWidth="58.0" text="Clear" />
         </children>
      </HBox>
      <TableView fx:id="userTable" VBox.vgrow="ALWAYS">
         <columns>
            <TableColumn fx:id="profileImage" prefWidth="138.0" style="-fx-alignment: CENTER;" text="รูปโปรไฟล์" />
            <TableColumn fx:id="name" prefWidth="93.0" style="-fx-alignment: CENTER;" text="Username" />
            <TableColumn fx:id="agency" prefWidth="75.0" style="-fx-alignment: CENTER;" text="หน่วยงาน" />
            <TableColumn fx:id="role" prefWidth="157.5" style="-fx-alignment: CENTER;" text="Role" />
            <TableColumn fx:id="lastOnline" prefWidth="186.0" style="-fx-alignment: CENTER;" text="เวลาใช้งานล่าสุด" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
