<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ku.cs.controllers.ShowUserDetailController">
   <children>
      <HBox>
         <children>
            <Button mnemonicParsing="false" onAction="#handleBackButton" styleClass="transparent-button" text="Back">
               <graphic>
                  <FontAwesomeIconView glyphName="ARROW_LEFT" />
               </graphic>
            </Button>
         </children>
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
      </HBox>
      <HBox styleClass="title">
         <children>
            <Label text="ผู้ใช้ทั้งหมด" />
         </children>
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
      </HBox>
      <TableView fx:id="userTable" VBox.vgrow="ALWAYS">
         <columns>
            <TableColumn fx:id="profileImage" prefWidth="138.0" style="-fx-alignment: CENTER;" text="Profile Image" />
            <TableColumn fx:id="name" prefWidth="93.0" style="-fx-alignment: CENTER;" text="Username" />
            <TableColumn fx:id="agency" prefWidth="75.0" style="-fx-alignment: CENTER;" text="Agency" />
            <TableColumn fx:id="role" prefWidth="157.5" style="-fx-alignment: CENTER;" text="Role" />
            <TableColumn fx:id="lastOnline" prefWidth="186.0" style="-fx-alignment: CENTER;" text="Last Online" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
