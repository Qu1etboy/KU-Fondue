<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ku.cs.controllers.TeacherRegisterController">
   <children>
      <HBox prefHeight="9.0" prefWidth="580.0">
         <children>
            <Button mnemonicParsing="false" onAction="#handleBackButton" text="Back" />
         </children>
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </HBox>
      <Label text="Register" />
      <VBox maxWidth="800.0" spacing="10.0">
         <children>
            <Label text="Username" />
            <TextField fx:id="usernameTextField" />
            <Label text="Name" />
            <TextField fx:id="nameTextField" />
            <Label text="Password" />
            <PasswordField fx:id="passwordTextField" />
            <Label text="Confirm Password" />
            <PasswordField fx:id="confirmPasswordTextField" />
            <HBox alignment="TOP_CENTER" spacing="20.0">
               <children>
                  <ComboBox fx:id="agencySelector" prefHeight="25.0" promptText="Select Agency" />
                  <Button mnemonicParsing="false" onAction="#handleUploadImage" text="Upload profile image" />
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
      <Button mnemonicParsing="false" onAction="#handleRegisterButton" text="Register" />
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
