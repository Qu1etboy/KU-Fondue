      <VBox alignment="CENTER" prefHeight="600.0" prefWidth="336.0" spacing="10.0" HBox.hgrow="ALWAYS">
         <children>
            <Label styleClass="title" text="Login" />
            <VBox alignment="CENTER" prefHeight="86.0" prefWidth="321.0" spacing="20.0">
