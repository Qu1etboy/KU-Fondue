<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ku.cs.controllers.SettingDetailController">
    <children>
        <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="40.0" prefWidth="600.0" text="Setting" textAlignment="CENTER" />
      <VBox alignment="TOP_CENTER" prefHeight="360.0" prefWidth="600.0" spacing="50.0">
         <children>
            <Button graphicTextGap="0.0" mnemonicParsing="false" onAction="#handleChangeName" prefHeight="25.0" prefWidth="145.0" text="เปลี่ยนชื่อ" wrapText="true">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </Button>
            <Button graphicTextGap="0.0" mnemonicParsing="false" onAction="#handleChangeProfile" prefHeight="25.0" prefWidth="145.0" text="เปลี่ยนรูปโปรไฟล์" wrapText="true">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </Button>
            <Button graphicTextGap="0.0" mnemonicParsing="false" onAction="#handleChangePassword" prefHeight="25.0" prefWidth="145.0" text="เปลี่ยนรหัสผ่าน" wrapText="true">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </Button>
            <Button graphicTextGap="0.0" mnemonicParsing="false" onAction="#handleChangeTheme" prefHeight="25.0" prefWidth="145.0" text="เปลี่ยน theme" wrapText="true">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </Button>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <padding>
            <Insets top="40.0" />
         </padding>
      </VBox>
    </children>

</VBox>
