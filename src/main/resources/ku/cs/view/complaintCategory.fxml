<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ku.cs.controllers.ComplaintCategoryDetailController">
   <children>
      <ScrollPane fitToWidth="true" minWidth="-Infinity" prefHeight="600.0" prefWidth="600.0" VBox.vgrow="ALWAYS">
         <content>
            <HBox>
               <children>
                  <VBox prefWidth="100.0" spacing="10.0" HBox.hgrow="ALWAYS">
                     <children>
                        <HBox>
                           <children>
                              <Button mnemonicParsing="false" onAction="#handleBackButton" text="Back" />
                           </children>
                        </HBox>
                        <Label text="หมวดหมู่เรื่องร้องเรียนทั้งหมด" />
                        <ListView fx:id="complaintCategoryListView" />
                        <HBox spacing="10.0">
                           <children>
                              <Button mnemonicParsing="false" onAction="#handleViewComplaintCategoryDetail" text="แสดงรายละเอียด" />
                              <Button mnemonicParsing="false" onAction="#handleRemoveComplaintCategory" text="ลบหมวดหมู่" />
                           </children>
                        </HBox>
                        <Button mnemonicParsing="false" onAction="#handleAddComplaintCategory" text="เพิ่มหมวดหมู่" />
                     </children>
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </VBox>
                  <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0" HBox.hgrow="ALWAYS">
                     <children>
                        <StackPane VBox.vgrow="ALWAYS">
                           <children>
                              <VBox fx:id="detailContent" prefHeight="200.0" prefWidth="100.0" spacing="10.0" visible="false">
                                 <children>
                                    <HBox>
                                       <children>
                                          <Button mnemonicParsing="false" text="Button" visible="false" />
                                       </children>
                                    </HBox>
                                    <Label text="หมวดหมู่เรื่องร้องเรียน" />
                                    <HBox>
                                       <children>
                                          <Label text="ชื่อหมวดหมู่ : " />
                                          <Label text="categoryName" />
                                       </children>
                                    </HBox>
                                    <Label text="คุณลักษณะของหมวดหมู่เรื่องร้องเรียน" />
                                    <ListView />
                                    <HBox spacing="10.0">
                                       <children>
                                          <Button mnemonicParsing="false" onAction="#handleChangeAttribute" text="แก้ไขคุณลักษณะ" />
                                          <Button mnemonicParsing="false" onAction="#handleRemoveAttribute" text="ลบคุณลักษณะ" />
                                       </children>
                                    </HBox>
                                    <Button mnemonicParsing="false" onAction="#handleAddAttribute" text="เพิ่มคุณลักษณะ" />
                                    <Button mnemonicParsing="false" text="แก้ไขชื่อหมวดหมู่" />
                                 </children>
                              </VBox>
                              <VBox fx:id="defaultContent" alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                                 <children>
                                    <Label text="กรุณาเลือกหมวดหมู่ที่ต้องการแก้ไข" />
                                 </children>
                              </VBox>
                           </children>
                        </StackPane>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>
               </children>
            </HBox>
         </content>
      </ScrollPane>
   </children>
</VBox>
