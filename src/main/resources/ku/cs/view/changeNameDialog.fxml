<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minWidth="-Infinity" spacing="20.0" styleClass="dialog-box" stylesheets="@../css/dialog.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ku.cs.controllers.setting.ChangeNameController">
   <children>
      <Label styleClass="title" text="Change your name" />
      <Label text="Enter your username, password and your new name" />
      <VBox spacing="10.0">
         <children>
            <Label text="Username" />
            <TextField fx:id="userNameTextField" />
            <Label text="Password" />
            <PasswordField fx:id="passwordPasswordField" />
            <Label text="New Name" />
            <TextField fx:id="userNameNewTextField" />
         </children>
      </VBox>
      <HBox alignment="TOP_RIGHT" spacing="10.0">
         <children>
            <Button mnemonicParsing="false" onAction="#handleCancelButton" text="Cancel" />
            <Button mnemonicParsing="false" onAction="#handleOKButton" text="Done" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="15.0" right="15.0" top="20.0" />
   </padding>
</VBox>
