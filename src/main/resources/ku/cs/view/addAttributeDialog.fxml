<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minWidth="-Infinity" spacing="20.0" styleClass="dialog-box" stylesheets="@../css/dialog.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ku.cs.controllers.AddAttributeDialogController">
   <children>
      <Label styleClass="title" text="เพิ่มคุณลักษณะของหมวดหมู่" />
      <Label text="ใส่ชื่อคุณลักษณะและประเภทที่ต้องการ" />
      <VBox spacing="10.0">
         <children>
            <Label text="ชื่อคุณลักษณะ" />
            <TextField fx:id="attributeNameTextField" />
            <Label text="Label" />
            <CheckBox fx:id="textCheckBox" mnemonicParsing="false" onAction="#handleTextCheckBox" text="ข้อความ" />
            <CheckBox fx:id="choiceCheckBox" mnemonicParsing="false" onAction="#handleChoiceCheckBox" text="ตัวเลือก" />
            <CheckBox fx:id="imageCheckBox" mnemonicParsing="false" onAction="#handleImageCheckBox" text="รูปภาพ" />
         </children>
      </VBox>
      <HBox alignment="TOP_RIGHT" spacing="10.0">
         <children>
            <Button mnemonicParsing="false" onAction="#handleCancelButton" text="Cancel" />
            <Button mnemonicParsing="false" onAction="#handleDoneButton" text="Done" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="15.0" right="15.0" top="20.0" />
   </padding>
</VBox>
