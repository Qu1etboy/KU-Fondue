<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ku.cs.controllers.ComplaintDetailController">
   <children>
      <ScrollPane fitToWidth="true" prefHeight="400.0" prefWidth="600.0" VBox.vgrow="ALWAYS">
         <content>
            <VBox alignment="TOP_CENTER" spacing="10.0">
               <children>
                  <HBox>
                     <children>
                        <Button mnemonicParsing="false" onAction="#handleBackButton" text="Back">
                           <HBox.margin>
                              <Insets bottom="10.0" />
                           </HBox.margin>
                        </Button>
                     </children>
                  </HBox>
                  <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                     <children>
                        <VBox alignment="TOP_CENTER" prefHeight="250.0" prefWidth="200.0" spacing="5.0" styleClass="danger-box">
                           <children>
                              <Label text="รอดําเนินการ" />
                              <Label text="Label" />
                           </children>
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </VBox>
                        <VBox alignment="TOP_CENTER" prefHeight="250.0" prefWidth="200.0" spacing="5.0" styleClass="warning-box">
                           <children>
                              <Label text="ดําเนินการ" />
                              <Label text="Label" />
                           </children>
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </VBox>
                        <VBox alignment="TOP_CENTER" prefHeight="250.0" prefWidth="200.0" spacing="5.0" styleClass="success-box">
                           <children>
                              <Label text="เสร็จสิ้น" />
                              <Label text="Label" />
                           </children>
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </VBox>
                     </children>
                  </HBox>
                  <VBox prefHeight="200.0" prefWidth="100.0" spacing="5.0">
                     <children>
                        <Label text="สถานะ" />
                        <ComboBox prefWidth="150.0" promptText="ทุกสถานะ" />
                        <Label text="เรียงจาก" />
                        <ComboBox prefWidth="150.0" />
                        <Label text="เลือกแสดงตามคะแนนโหวต" />
                        <TextField maxWidth="-Infinity" prefWidth="100.0" />
                        <Button mnemonicParsing="false" text="ล้างการค้นหา" />
                     </children>
                  </VBox>
                  <TableView fx:id="complaintTable">
                     <columns>
                        <TableColumn fx:id="number" prefWidth="75.0" text="ลำดับ" />
                        <TableColumn fx:id="category" prefWidth="165.0" text="หมวดหมู่" />
                        <TableColumn fx:id="detail" prefWidth="257.0" text="รายละเอียด" />
                        <TableColumn fx:id="status" prefWidth="172.0" text="สถานะ" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
                  <Button mnemonicParsing="false" onAction="#handleViewDetail" text="ดูรายละเอียด" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </content>
      </ScrollPane>
   </children>
</VBox>
